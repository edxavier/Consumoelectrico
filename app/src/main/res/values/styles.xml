<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="md_corner_radius">12dp</item>
        <item name="md_color_button_text">?attr/colorSecondary</item>
        <item name="md_color_title">@color/primaryDarkColor</item>

        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="android:colorAccent">@color/secondaryColor</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="materialButtonStyle">@style/AppButton</item>

    </style>
    <!-- Base application theme. -->
    <style name="AppTheme.Details" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
    </style>




    <style name="drawerTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/source_sans_pro</item>
    </style>

    <!-- Splash Screen Theme. -->
    <style name="SplashTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>


    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:radius">16dp</item>
    </style>

    <style name="filledTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/md_blue_grey_50</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="input_error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/md_red_500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
