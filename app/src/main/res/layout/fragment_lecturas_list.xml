<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/md_blue_grey_600"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:textColor="@color/label_text_light"
            android:padding="8dp"
            android:text="@string/label_date"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/label_text_light"
            android:padding="8dp"
            android:text="@string/label_reading"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/label_text_light"
            android:padding="8dp"
            android:text="@string/label_avg"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="35dp"
        android:id="@+id/recycler_readings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />


    <LinearLayout
        android:id="@+id/message_body"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_file_rounded_empty_sheet"
            android:layout_width="44dp"
            android:layout_height="44dp"
            tools:ignore="ContentDescription" />

        <TextView
            fontPath="fonts/Roboto-Bold.ttf"
            android:layout_gravity="center"
            android:text="@string/main.emty.title"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />


        <TextView
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/main.empty.suggest"
            android:gravity="center"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />

    </LinearLayout>


</RelativeLayout>
