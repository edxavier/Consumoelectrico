<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:layout_marginTop="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/item_period_status"
            android:layout_width="16dp"
            android:background="@color/md_green_700"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:id="@+id/item_label_from_period"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/AppTheme.Title"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:text="10 Jun. 2020" />
                <androidx.appcompat.widget.AppCompatImageView
                    app:srcCompat="@drawable/ic_baseline_chevron_right"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    style="@style/AppTheme.Title"
                    android:id="@+id/item_label_to_period"
                    android:text="15 Jun. 2020"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_first_reading"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/AppTheme.Title"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:text="@string/empty_placeholder" />

                <TextView
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    style="@style/AppTheme.Title"
                    android:textAlignment="center"
                    android:id="@+id/item_last_reading"
                    android:text="@string/empty_placeholder"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                android:layout_marginTop="4dp"
                android:background="@color/secondaryDarkColor"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/md_blue_grey_800"
                        android:id="@+id/item_label_total_kw"
                        android:layout_gravity="center"
                        android:textSize="22sp"
                        android:text="@string/empty_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_gravity="center"
                        android:text="@string/label_consumption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/md_blue_grey_800"
                        android:id="@+id/item_label_total_spend"
                        android:layout_gravity="center"
                        android:textSize="22sp"
                        android:text="@string/empty_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_gravity="center"
                        android:text="@string/estimated_expense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
