<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetallesFragment">


    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_desc"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/play"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/description"
                        android:textStyle="bold" />
                    <View
                        android:layout_margin="4dp"
                        android:background="@color/md_black_1000_25"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:layout_margin="8dp"
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/description"
                        android:textStyle="italic" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_resume"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/md_grey_700"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/play"
                        android:text="@string/detail.period.title"
                        android:textAlignment="center"
                        android:textColor="@color/md_white_1000_75"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:padding="4dp"
                        android:background="@color/md_grey_800"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/label_text_light"
                            fontPath="fonts/pierRegular.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/detail.period.init"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/txt_beginning_period"
                            android:textColor="@color/label_text_light"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:fontFamily="@font/share_tech"
                            android:paddingEnd="8dp"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:padding="4dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/label_text_light"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/initial_reading"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/txt_initial_reading"
                            android:gravity="end"
                            android:textColor="@color/label_text_light"
                            fontPath="fonts/pierRegular.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:fontFamily="@font/share_tech"
                            android:paddingEnd="8dp"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:background="@color/md_grey_800"
                        android:padding="4dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/label_text_light"
                            fontPath="fonts/pierRegular.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/detail.period.last_lecture.date"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/txt_last_reading_date"
                            android:textColor="@color/label_text_light"
                            fontPath="fonts/pierRegular.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:fontFamily="@font/share_tech"
                            android:paddingEnd="8dp" android:textSize="16sp"
                            android:gravity="end"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:padding="4dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/label_text_light"
                            fontPath="fonts/pierRegular.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="@string/detail.period.lenght"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/txt_period_len"
                            android:textColor="@color/label_text_light"
                            fontPath="fonts/pierRegular.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/share_tech"
                            android:paddingEnd="8dp"
                            android:text="----"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:padding="4dp"
                        android:background="@color/md_grey_800"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/label_text_light"
                            fontPath="fonts/pierRegular.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_days_consumption"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/txt_days_consumed"
                            android:textColor="@color/label_text_light"
                            fontPath="fonts/pierRegular.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:fontFamily="@font/share_tech"
                            android:paddingEnd="8dp"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>



                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/md_blue_grey_700"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/play"
                        android:text="@string/detail.period.title2"
                        android:textAlignment="center"
                        android:textColor="@color/md_white_1000_75"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:padding="4dp"
                        android:background="@color/md_blue_grey_800"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/label_text_light"
                            fontPath="fonts/pierRegular.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_last_reading"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/txt_last_reading"
                            android:textColor="@color/label_text_light"
                            fontPath="fonts/pierRegular.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:fontFamily="@font/share_tech"
                            android:paddingEnd="8dp"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:padding="4dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/label_text_light"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/label_consumption"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/txt_current_consumption"
                            android:gravity="end"
                            android:textColor="@color/label_text_light"
                            fontPath="fonts/pierRegular.otf"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:fontFamily="@font/share_tech"
                            android:paddingEnd="8dp"
                            android:textSize="16sp"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:background="@color/md_blue_grey_800"
                        android:padding="4dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/label_text_light"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="@string/label_consump_avg"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/txt_avg_consumption"
                            android:textColor="@color/label_text_light"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:fontFamily="@font/share_tech"
                            android:paddingEnd="8dp"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:padding="4dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/label_text_light"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="@string/chart.legend.estimate"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/txt_estimate_consumptio_kwh"
                            android:textColor="@color/label_text_light"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:fontFamily="@font/share_tech"
                            android:paddingEnd="8dp"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:padding="4dp"
                        android:background="@color/md_blue_grey_800"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/label_text_light"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/estimated_expense"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/txt_estimate_expense"
                            android:textColor="@color/label_text_light"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:fontFamily="@font/share_tech"
                            android:paddingEnd="8dp"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="4dp"
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/label_text_light"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="@string/estimated_unsubsidized_expense"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/txt_estimate_expense_no_discount"
                            android:textColor="@color/label_text_light"
                            tools:ignore="MissingPrefix"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textSize="16sp"
                            android:gravity="end"
                            android:fontFamily="@font/share_tech"
                            android:paddingEnd="8dp"
                            android:layout_marginStart="16dp" />

                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                app:contentPadding="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/play"
                        android:textAlignment="center"
                        android:text="@string/detail.chart1.title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.github.mikephil.charting.charts.LineChart
                        android:layout_marginTop="8dp"
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="210dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                app:contentPadding="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/detail.chart2.title"
                        android:fontFamily="@font/play"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <com.github.mikephil.charting.charts.LineChart
                        android:layout_marginTop="8dp"
                        android:id="@+id/chart2"
                        android:layout_width="match_parent"
                        android:layout_height="210dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                app:contentPadding="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/period_history"
                        android:fontFamily="@font/play"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:layout_marginTop="8dp"
                        android:id="@+id/chart3"
                        android:layout_width="match_parent"
                        android:layout_height="210dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</FrameLayout>