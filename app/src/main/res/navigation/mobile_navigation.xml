    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.nicrosoft.consumoelectrico.ui.calculator.PulseCalculatorFragment"
        android:label="@string/calculator.title"
        tools:layout="@layout/fragment_real_time_consumption" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.nicrosoft.consumoelectrico.ui.SettingsFragment"
        android:label="@string/action_settings"
        tools:layout="@layout/fragment_settings" />


    <fragment
        android:id="@+id/nav_nueva_lectura"
        android:name="com.nicrosoft.consumoelectrico.ui.nueva_lectura.NuevaLecturaFragment"
        android:label="@string/new_reading"
        tools:layout="@layout/fragment_nueva_lectura2" >
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="----" />
    </fragment>
    <fragment
        android:id="@+id/listaLecturasFragment"
        android:name="com.nicrosoft.consumoelectrico.ui.lecturas.ListaLecturasFragment"
        android:label="@string/label_readings"
        tools:layout="@layout/fragment_lista_lecturas">
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="----" />
        <argument
            android:name="desc"
            app:argType="string"
            android:defaultValue="----" />
        <action
            app:enterAnim="@anim/fragment_close_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            android:id="@+id/action_listaLecturasFragment_to_nav_nueva_lectura"
            app:destination="@id/nav_nueva_lectura" />
    </fragment>
    <fragment
        android:id="@+id/detallesFragment"
        android:name="com.nicrosoft.consumoelectrico.ui.DetallesFragment"
        android:label="@string/details"
        tools:layout="@layout/fragment_detalles" >
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="----" />
        <argument
            android:name="desc"
            app:argType="string"
            android:defaultValue="----" />
